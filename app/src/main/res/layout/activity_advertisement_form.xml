<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forms.BookingForm"
    android:background="@color/white">

    <TextView
        android:fontFamily="@font/poppins_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advertisement"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Title"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter title"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:inputType="textCapSentences"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Select Area"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinnerArea"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:spinnerMode="dropdown"/>

                <ImageView
                    android:id="@+id/ivdrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_alignEnd="@+id/spinnerArea"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Zone"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Enter zone"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Pincode"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:layout_width="190dp"
                            android:layout_height="50dp"
                            android:hint="Enter pincode"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Ward"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Enter ward"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Block"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/red"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:layout_width="190dp"
                            android:layout_height="50dp"
                            android:hint="Enter block"
                            android:padding="10dp"
                            android:textSize="15sp"
                            android:background="@drawable/edittext_bg"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Choose Criteria"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinnerCriteria"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/Criteria_Advertisement"
                    android:textSize="15sp"
                    android:popupBackground="@color/white"/>

                <ImageView
                    android:id="@+id/tvCriteria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_alignEnd="@+id/spinnerCriteria"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvChooseDocument"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Upload Documents Online"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/llAdvertisement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cbAdvertisementAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Proof"
                android:checked="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/custom_checkbox"/>

            <RadioGroup
                android:id="@+id/rgAdvertisementAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-22dp"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/rbAdvertisementAddressVoterIDCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voter ID Card"/>

                <RadioButton
                    android:id="@+id/rbAdvertisementAddressRationCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ration Card"
                    android:layout_marginTop="-25dp"/>

                <RadioButton
                    android:id="@+id/rbAdvertisementAddressDriving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving License"
                    android:layout_marginTop="-25dp"/>

            </RadioGroup>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/llLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cbLicenseAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Proof"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:button="@drawable/custom_checkbox"/>

                <RadioGroup
                    android:id="@+id/rgLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-22dp"
                    android:layout_marginLeft="20dp">

                    <RadioButton
                        android:id="@+id/rbLicenseAddressAdhaarcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adhaar Card"
                        android:layout_marginBottom="-25dp"/>

                    <RadioButton
                        android:id="@+id/rbLicenseAddressVoterIDCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voter ID Card"/>

                    <RadioButton
                        android:id="@+id/rbLicenseAddressRationCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ration Card"
                        android:layout_marginTop="-25dp"/>

                </RadioGroup>

                <CheckBox
                    android:id="@+id/cbLicenseIDProof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Proof"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:button="@drawable/custom_checkbox"
                    android:layout_marginTop="-20dp"/>

                <RadioGroup
                    android:id="@+id/rgLicenseIDProof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-22dp"
                    android:layout_marginLeft="20dp">

                    <RadioButton
                        android:id="@+id/rbLicenseIDAdhaarcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adhaar Card"
                        android:layout_marginBottom="-25dp"/>

                    <RadioButton
                        android:id="@+id/rbLicenseIDVoterIDCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voter ID Card"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Description"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="165dp"
                android:hint="Write here...."
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:inputType="textCapSentences"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/button_gradient"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>